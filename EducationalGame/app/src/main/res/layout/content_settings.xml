<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michael.educationalgame.SettingsActivity"
    tools:showIn="@layout/activity_settings">


    <Button
        android:id="@+id/clearHighscores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clearHighscores"
        android:text="Clear Highscores" />

    <SeekBar
        android:id="@+id/firstValueMaxSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/secondValueMaxSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/firstValueMaxText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/secondValueMaxText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
</LinearLayout>
